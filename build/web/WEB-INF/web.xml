<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>controller.User.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminControllerServlet</servlet-name>
        <servlet-class>controller.Admin.AdminControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClubControllerServlet</servlet-name>
        <servlet-class>controller.Admin.ClubControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EventControllerServlet</servlet-name>
        <servlet-class>controller.Admin.EventControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MemberControllerServlet</servlet-name>
        <servlet-class>controller.Admin.MemberControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserControllerServlet</servlet-name>
        <servlet-class>controller.Admin.UserControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NotificationControllerServlet</servlet-name>
        <servlet-class>controller.Admin.NotificationControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadProfileServlet</servlet-name>
        <servlet-class>controller.User.UploadProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadFileServlet</servlet-name>
        <servlet-class>controller.User.UploadFileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminControllerServlet</servlet-name>
        <url-pattern>/AdminControllerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClubControllerServlet</servlet-name>
        <url-pattern>/ClubControllerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EventControllerServlet</servlet-name>
        <url-pattern>/EventControllerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MemberControllerServlet</servlet-name>
        <url-pattern>/MemberControllerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserControllerServlet</servlet-name>
        <url-pattern>/UserControllerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NotificationControllerServlet</servlet-name>
        <url-pattern>/NotificationControllerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadFileServlet</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>
            /user/Home.jsp
        </welcome-file>
    </welcome-file-list>
</web-app>
